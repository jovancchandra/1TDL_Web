@model IEnumerable<_1TDL_Web.Models.ToDo>

<div id="progressBarToDo">
    <div class="progress">
        <div class="progress-bar" role="progressbar"
                style="width:@(Html.AttributeEncode(ViewBag.Percent))%"></div>
    </div>
    <!--<p>@(ViewBag.Percent)%</p>-->
</div>

<table class="table"> <!--Original table from Index.cshtml-->
    <tr>
        <th>
            <!--@Html.DisplayNameFor(model => model.Description)-->
            Tasks
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Due)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completed)
        </th>
        <th></th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.Completed)
                {
                    @Html.DisplayFor(modelItem => item.Description)
                }
                else
                {
                    <div class="CompletedToDo">@Html.DisplayFor(modelItem => item.Description)</div>
                }
            </td>
            <td>
                @if (!item.Completed)
                {
                    @Html.DisplayFor(modelItem => item.Due)
                }
                else
                {
                    <div class="CompletedToDo">@Html.DisplayFor(modelItem => item.Due)</div>
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Completed, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/Custom_Scripts/AddCheckBoxListener.js"></script>
